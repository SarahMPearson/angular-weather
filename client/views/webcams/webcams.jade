h3 {{title}}

  .row
    .col-xs-6.col-xs-offset-3
      form(role='form', novalidate, name='webcamForm')
        .form-group
          label(for='zip') Zip Code
          input.form-control#zip(ng-pattern='/^[0-9]{5}$/', required, ng-model='zip', type='text', name='zip', autofocus)
        button.btn.btn-primary(type='submit', ng-show='webcamForm.$valid', ng-click='getWebcams()') Get Webcams
    .col-xs-3
  .row(ng-show='webcams')
    .col-xs-12
      .panel.panel-default
        .panel-body
          .webcam(ng-repeat='webcam in webcams')
            img(ng-src='{{webcam.WIDGETCURRENTIMAGEURL}}')

