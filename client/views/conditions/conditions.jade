h3 {{title}}

  .row
    .col-xs-6.col-xs-offset-3
      form(role='form', novalidate, name='conditionsForm')
        .form-group
          label(for='zip') Zip Code
          input.form-control#zip(ng-pattern='/^[0-9]{5}$/', required, ng-model='zip', type='text', name='zip', autofocus)
        button.btn.btn-primary(type='submit', ng-show='conditionsForm.$valid', ng-click='getConditions()') Get Weather
    .col-xs-3

  .row
    .col-xs-6.col-xs-offset-3
      h3 Current Temp: {{temperature}}&deg
      img(src="{{icon}}")
      h3 Currently Feels Like: {{feelsLike}}&deg
    .col-xs-3
